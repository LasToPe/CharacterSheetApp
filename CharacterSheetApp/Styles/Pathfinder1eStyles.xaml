<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="md:TextFieldAssist.HasOutlinedTextField" Value="True" />
    </Style>
    
    <Style TargetType="TextBox" x:Key="UnderlinedFloat" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Margin" Value="5,0" />
    </Style>
    
    <Style TargetType="TextBox" x:Key="Underlined" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalContentAlignment" Value="Bottom" />
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
    </Style>
    
    <Style TargetType="TextBlock" x:Key="Center">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
</ResourceDictionary>