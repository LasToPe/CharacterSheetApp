<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:CharacterSheetApp.Styles">

    <Style TargetType="TextBox" x:Key="Invisible" BasedOn="{StaticResource MaterialDesignTextBoxBase}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="md:TextFieldAssist.UnderlineBrush" Value="Transparent" />
    </Style>
    
</ResourceDictionary>