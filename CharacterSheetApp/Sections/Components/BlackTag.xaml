<UserControl x:Class="CharacterSheetApp.Sections.Components.BlackTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CharacterSheetApp.Sections.Components"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" >
    <Border Background="Black" Margin="5">
        <StackPanel>
            <TextBlock Text="{Binding Abbreviation, FallbackValue=CON}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
            <TextBlock Text="{Binding FullName, FallbackValue=Constitution}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Margin="0,-4,0,0" />
        </StackPanel>
    </Border>
</UserControl>
