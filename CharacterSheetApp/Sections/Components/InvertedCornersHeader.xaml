<UserControl x:Class="CharacterSheetApp.Sections.Components.InvertedCornersHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CharacterSheetApp.Sections.Components"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Loaded="InvertedCornerHeader_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid>
        <Path x:Name="Background" Fill="Black"/>
        <TextBlock Text="{Binding HeaderText, FallbackValue=Header}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="24" />
    </Grid>
</UserControl>
